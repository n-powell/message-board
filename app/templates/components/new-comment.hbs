{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="user">User</label>
        {{input value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="body">body</label>
        {{input value=body id="body"}}
      </div>
      <button class="btn btn-secondary btn-sm"{{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info btn-sm" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
