{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
<form>
  <div class="form-group">
    <label for="user">User</label>
    {{input value=user id="user"}}
  </div>

  <div class="form-group">
    <label for="title">Subject/Title</label>
    {{input value=title id="title"}}
  </div>

  <div class="form-group">
    <label for="body">Question Body</label>
    {{textarea value=body id="body"}}
  </div>

  <button class="btn btn-success btn-sm" {{action 'saveQuestion'}}>Save</button>
</form>
</div>
{{else}}
  <button class="btn btn-info btn-lg" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
